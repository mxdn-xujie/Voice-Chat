# 前端构建阶段
FROM node:18-alpine
WORKDIR /app

# 安装pnpm
RUN npm install -g pnpm

# 复制package.json和lockfile
COPY package*.json ./
COPY pnpm-lock.yaml ./

# 安装依赖
RUN pnpm install

# 复制后端文件
COPY behind/package*.json ./behind/
WORKDIR /app/behind
RUN npm install

# 回到主工作目录
WORKDIR /app

# 复制源代码
COPY . .

# 暴露端口
EXPOSE 3500

# 启动开发服务器
CMD ["sh", "-c", "cd behind && npm run dev & pnpm run dev"]